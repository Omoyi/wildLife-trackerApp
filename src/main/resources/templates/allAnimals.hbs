{{#partial "content"}}

<nav class="navbar navbar-light">
    <ol class="breadcrumb">
        <li><a href="/">Home</a></li>
        <li><a href="/animal/new">Add Animal</a></li>
        <li class="active">All Animals</li>
        <li><a href="/sighting">Post Sighting</a></li>
    </ol>
</nav>

<div class="row">
    <div class="col-sm-6">
        <h3 style="text-align:center">Endangered Animals</h3>
        <a href="/animal/new">Add Animal to Report a Sighting</a>
        {{#if endangeredAnimals}}

        {{#each endangeredAnimals}}
        <div class="thumbnail">
            <center>
                <h4>{{name}}</h4>
                <a href="/endangeredAnimal/{{id}}">
                    Click here for details
                </a>
            </center>
        </div>
        {{/each}}
        {{/if}}
    </div>
    <div class="col-sm-6">
        <h3 style="text-align:center">Non-Endangered Animals</h3>
        {{#if animals}}
        <a href="/animal/new">Add Animal to Report a Sighting</a>

        {{#each animals}}
        <div class="thumbnail">
            <center>
                <h4>{{name}}</h4>

                <a href="/animal/{{id}}">
                    Click here for details
                </a>
            </center>
        </div>
            {{/each}}
        {{/if}}
    </div>
</div>
<style>

</style>
{{/partial}}
{{> layout.hbs}}