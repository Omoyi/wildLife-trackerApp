{{#partial "content" }}

<div class="well">
  <div class="row">
    <div class="col-md-8 col-md-offset-4">
      <h2>$animal.getName()</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      <h3>Add new $animal.getName() sighting.</h3>
      <form action='/animals/$animal.getId()/sightings/new' method='post'>
        <input id="sighting-animal-id" name="sighting-animal-id" type="hidden" value="$animal.getId()">
        <div class="form-group">
          <label for="sighting-ranger">Enter your name:</label>
          <input id="sighting-ranger" name="sighting-ranger" class="form-control" type="text">
        </div>
        <div class="form-group">
          <label for="sighting-location">Enter the location where you spotted the animal.</label>
          <input id="sighting-location" name="sighting-location" class="form-control" type="text">
        </div>

        <button type="submit" class="btn btn-primary">Add sighting</button>
      </form>
    </div>
    <div class="col-md-8">
      <h3>Details</h3>
      #if($animal.isEndangered())
        <p><strong>Status: </strong>Endangered</p>
        <p><strong>Health: </strong>$animal.getHealth()</p>
        <p><strong>Age: </strong>$animal.getAge()</p>
      #else
        <p><strong>Status: </strong>not endangered</p>
      #end
      #if($sightings.size() > 0)
        <h3>Sightings</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Reported</th>
              <th>Ranger Name</th>
              <th>Location</th>
            </tr>
          </thead>
          <tbody>
            #foreach($sighting in $sightings)
              <tr>
                <td>$sighting.getFormattedDate()</td>
                <td>$sighting.getRangerName()</td>
                <td>$sighting.getLocation()</td>
              </tr>
            #end
          </tbody>
        </table>
      #else
        <h3>No Sightings</h3>

      #end
    </div>

  </div>
</div>
{{/partial}}
{{> layout.hbs}}